# LiveKit Voice Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?sslmode=require
# 
# Examples:
# - Neon: postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/dbname?sslmode=require
# - Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres?sslmode=require
# - Local: postgresql://postgres:password@localhost:5432/voice_agent
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# =============================================================================
# LIVEKIT CONFIGURATION
# =============================================================================
# LiveKit Cloud URL (use wss:// for secure WebSocket)
# Get this from your LiveKit Cloud dashboard
LIVEKIT_URL=wss://your-project.livekit.cloud

# LiveKit API credentials
# Get these from your LiveKit Cloud dashboard
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# OpenAI API Key (for GPT-4o-mini LLM)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key_here

# Deepgram API Key (for Speech-to-Text)
# Get from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_key_here

# Cartesia API Key (for Text-to-Speech)
# Get from: https://cartesia.ai/
CARTESIA_API_KEY=your_cartesia_key_here

# =============================================================================
# AGENT CONFIGURATION (Optional)
# =============================================================================
# Agent type to run (hospital, hotel, salon, etc.)
AGENT_TYPE=hospital

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOGLEVEL=INFO

# Environment name (development, staging, production)
ENVIRONMENT=development

# Timezone for agent (affects current time display and booking validation)
# Use IANA timezone names: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
# Examples: Asia/Kolkata, America/New_York, Europe/London, UTC
TIMEZONE=Asia/Kolkata

# =============================================================================
# DEVELOPMENT CONFIGURATION (Optional)
# =============================================================================
# Python unbuffered output (useful for Docker logs)
PYTHONUNBUFFERED=1

# =============================================================================
# EMAIL/SMTP CONFIGURATION (Optional)
# =============================================================================
# SMTP Host (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=smtp.gmail.com

# SMTP Port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP Username (usually your email address)
SMTP_USER=your-email@gmail.com

# SMTP Password (use app-specific password for Gmail)
SMTP_PASSWORD=your-app-password

# From email address
SMTP_FROM=AI Receptionist <your-email@gmail.com>

# Company name for email signatures
COMPANY_NAME=City Health Clinic

# =============================================================================
# NOTES
# =============================================================================
# 1. All API keys and secrets should be kept secure
# 2. Use different credentials for dev, staging, and production
# 3. Enable SSL/TLS for database connections (sslmode=require)
# 4. Use wss:// (not ws://) for LiveKit URL in production
# 5. Rotate API keys regularly for security
# 6. Never commit .env files to version control

